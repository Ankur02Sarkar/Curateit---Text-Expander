{
  "manifest_version": 3,
  "name": "Custom Search Bar Shortcut",
  "version": "1.0.0",
  "description": "Replace 'c/me' with a custom link in the Chrome search bar",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "c"
  }
}
