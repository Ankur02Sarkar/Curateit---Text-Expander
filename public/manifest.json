{
  "manifest_version": 3,
  "name": "Curateit Search",
  "version": "1.0.0",
  "description": "Type 'c:' in the search bar and hit space and enter shortcut",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "c:"
  },
  "permissions": [
    "storage"
  ]
}